server {
    listen 80;
    server_name ${DOMAIN};

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 503 "SSL not available yet.";
    }
}

server {
    listen 80;
    server_name ${DOMAIN_1C};

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 503 "SSL not available yet.";
    }
}
